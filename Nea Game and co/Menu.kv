			font_name: "Pixel font.ttf"
		
		TextInput:
			hint_text: "Enter Account Username"
			multiline: False
			size_hint: .6,.125		
			pos_hint: { "center_x": .5}
			font_name: "Pixel font.ttf"
		
		TextInput:
			hint_text: "Enter New Password"
			multiline: False
			size_hint: .6,.125	
			pos_hint: { "center_x": .5}
			font_name: "Pixel font.ttf"
		
		TextInput:
			hint_text: "Enter new password again"
			multiline: False
			size_hint: .6,.125			
			pos_hint: { "center_x": .5}
			font_name: "Pixel font.ttf"

		BoxLayout:
			orientation: "horizontal"
			size_hint: 1.25,.5
			Label:
				text:	
		Button:
			text:'Back'
			background_normal: "Button normal.png"
			background_down: "Button down.png"
			pos_hint: {"x": 0}
			size_hint: .2,.3
			font_size: "40dp"
			font_name: "Pixel font.ttf"
			on_release:
				app.root.current = "menu"
				root.manager.transition = NoTransition() 
